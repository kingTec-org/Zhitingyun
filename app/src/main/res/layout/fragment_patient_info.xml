<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingTop="20dp">

    <include layout="@layout/top_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="43dp"
        android:background="@color/colorGrayf7"
        android:orientation="vertical">


        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/qmui_config_color_white"
            android:gravity="center"
            android:orientation="vertical"
            app:qmui_borderColor="@color/colorWhite"
            app:qmui_outerNormalColor="@color/colorWhite">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="54dp"
                android:layout_height="54dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="23dp">


                    <TextView
                        style="@style/text16"
                        android:text="性     别    ："
                        android:textColor="@color/colorGray99" />

                    <TextView
                        android:id="@+id/tvSex"
                        style="@style/text16"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/colorGray33" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="23dp">

                    <TextView
                        style="@style/text16"
                        android:text="年     龄    ："
                        android:textColor="@color/colorGray99" />

                    <TextView
                        android:id="@+id/tvAge"
                        style="@style/text16"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/colorGray33" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="23dp">


                    <TextView
                        style="@style/text16"
                        android:text="佩戴经验："
                        android:textColor="@color/colorGray99" />

                    <TextView
                        android:id="@+id/tvExperience"
                        style="@style/text16"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/colorGray33" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="23dp">

                    <TextView
                        style="@style/text16"
                        android:text="诊疗次数："
                        android:textColor="@color/colorGray99" />

                    <TextView
                        android:id="@+id/tvTimes"
                        style="@style/text16"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/colorGray33" />
                </LinearLayout>
            </LinearLayout>

        </com.qmuiteam.qmui.layout.QMUILinearLayout>


        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:background="@color/qmui_config_color_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            app:qmui_borderColor="@color/colorWhite"
            app:qmui_outerNormalColor="@color/colorWhite">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查看听力图"
                android:textColor="@color/colorGray33" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/next_gray" />
        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/linearlayout3"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/qmui_config_color_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            app:qmui_borderColor="@color/colorWhite"
            app:qmui_outerNormalColor="@color/colorWhite">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查看当前设备参数"
                android:textColor="@color/colorGray33" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/next_gray" />
        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/linearlayout4"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/qmui_config_color_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            app:qmui_borderColor="@color/colorWhite"
            app:qmui_outerNormalColor="@color/colorWhite">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查看历史诊疗报告"
                android:textColor="@color/colorGray33" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/next_gray" />
        </com.qmuiteam.qmui.layout.QMUILinearLayout>


    </LinearLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>
