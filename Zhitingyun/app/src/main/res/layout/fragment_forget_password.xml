<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/colorGrayf7"
        android:orientation="vertical">


        <include layout="@layout/top_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <TextView
                style="@style/text16"
                android:layout_marginLeft="15dp"
                android:text="手机号码"
                android:textColor="@color/colorGray33" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="输入手机号码"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <TextView
                style="@style/text16"
                android:layout_marginLeft="15dp"
                android:text="验证码    "
                android:textColor="@color/colorGray33" />

            <EditText
                android:id="@+id/etCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入验证码"
                android:inputType="number" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:text="发送验证码"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:qmui_backgroundColor="@color/colorWhite"
                app:qmui_borderColor="@color/colorPrimary"
                app:qmui_borderWidth="1dp"
                app:qmui_radius="3dp" />

        </LinearLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btLogin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary"
            android:text="下一步"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:qmui_backgroundColor="@color/colorPrimary"
            app:qmui_borderWidth="0dp"
            app:qmui_radius="3dp" />
    </LinearLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>
