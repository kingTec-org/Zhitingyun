    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:stretchColumns="*"
        android:visibility="visible">

        <TableRow>

            <EditText
                android:id="@+id/et_mem_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_set_mem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_mem" />

            <Button
                android:id="@+id/btn_read_param"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_all_param" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_set_sys_param"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/write_sys_param" />

            <Button
                android:id="@+id/btn_set_mem_param"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/write_mem_param" />

            <Button
                android:id="@+id/btn_auto_fitting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_fitting" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/list_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:scrollbars="none"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/list_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:scrollbars="none" />
