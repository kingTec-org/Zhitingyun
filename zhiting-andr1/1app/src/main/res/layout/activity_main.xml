<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait">

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_scan"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>

            <EditText
                android:id="@+id/et_tone_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_dark"
                android:textAlignment="center"
                android:inputType="number"/>
            <Spinner
                android:id="@+id/spn_pure_tone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:entries="@array/freq"/>
            <EditText
                android:id="@+id/et_tone_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_freq_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark" />
            <Button
                android:id="@+id/btn_save_hl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_hearing"/>
            <Button
                android:id="@+id/btn_freq_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark" />
        </TableRow>
    </TableLayout>
